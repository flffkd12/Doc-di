<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Doc_di" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:windowLightStatusBar" >false</item>
        <item name="android:windowBackground">@drawable/backgroundimage</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Doc_di.Splash" parent="Theme.SplashScreen" >
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="postSplashScreenTheme">@style/Theme.Doc_di</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="CustomTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">#FF007AEB</item> <!-- Accent color -->
        <item name="android:textColorPrimary">#FF4b7be5</item> <!-- Text color -->
        <item name="android:textColorSecondary">#FF95CCFF</item> <!-- Secondary text color -->
    </style>
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">#FF007AEB</item> <!-- Accent color -->
        <item name="android:textColorPrimary">#FF000000</item> <!-- Text color 4b7be5 -->
        <item name="android:textColorSecondary">#FF000000</item> <!-- Secondary text color FF95CCFF -->
        <item name="android:textColorTertiary">#FFFFFFFF</item> <!-- Teritory text color -->
    </style>
</resources>